<!--components/search-input.wxml-->
<view class="search">
  <view class="input-container">
    <input class="weui-input"  maxlength="{{maxLength}}" bindinput="bindSearchInput" placeholder="输入搜索内容"/>
  </view>
  <view class="button-container">
    <button class="mini-btn" type="default" size="mini" style="color: rgb(224, 218, 218); background-color: grey;" bind:tap="handleTap">搜索</button>
  </view>
</view>